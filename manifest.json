{
    "manifest_version": 3,
    "name": "Subtítulos en Tiempo Real",
    "version": "1.0",
    "description": "Extensión para generar subtítulos en tiempo real y traducirlos en cualquier página.",
    "permissions": [
        "scripting",
        "activeTab"
        ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]

        }
    ]
}